{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "types": [
      "react",
      "react-native",
      "node",
      "jest"
    ]
  },
  "include": [
    "src",
    "App.tsx",
    "app.json",
    "app.config.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ]
}
